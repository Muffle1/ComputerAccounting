<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ComputerAccounting">

    <Style x:Key="BorderBaseStyle" TargetType="Border">

        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" Color="Gray"/>
            </Setter.Value>
        </Setter>

    </Style>

    <Style x:Key="BorderWhiteStyle" TargetType="Border" BasedOn="{StaticResource BorderBaseStyle}">

        <Setter Property="Width" Value="300"/>
        <Setter Property="MaxHeight" Value="396.7"/>
        <Setter Property="Padding" Value="10 30"/>

    </Style>

    <Style x:Key="BorderGrayStyle" TargetType="Border" BasedOn="{StaticResource BorderBaseStyle}">

        <Setter Property="Padding" Value="20 10"/>

    </Style>
    
</ResourceDictionary>