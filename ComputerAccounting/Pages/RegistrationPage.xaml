<Page x:Class="ComputerAccounting.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerAccounting.Pages" 
      xmlns:components="clr-namespace:ComputerAccounting.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage"
      Background="#7ae7f5">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/TextBlockDictionary.xaml"/>
                <ResourceDictionary Source="/Styles/TextBoxDictionary.xaml"/>
                <ResourceDictionary Source="/Styles/ButtonDictionary.xaml"/>
                <ResourceDictionary Source="/Styles/ComboBoxDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Border CornerRadius="10"
            BorderThickness="2"
            BorderBrush="#828282"
            Width="300"
            Margin="50 50"
            MaxHeight="350"
            Padding="10 30"
            Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Color="Gray"/>
        </Border.Effect>

        <Border Background="#dbdbdb"
                CornerRadius="10"
                BorderThickness="2"
                BorderBrush="#828282"
                Padding="0 10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="Gray"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Style="{StaticResource TextBlockAuthenticationStyle}"
                           Text="Регистрация"
                           Foreground="#073169"/>

                <TextBox Style="{StaticResource TextBoxAuthenticationStyle}"
                         Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                         x:Name="Login"
                         Tag="Логин"
                         BorderBrush="#107a2e"
                         HorizontalContentAlignment="Center"/>

                <components:BindablePasswordBox
                        Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Style="{StaticResource TextBlockAuthenticationStyle}"
                           Text="Роль"
                           FontSize="18"
                           Foreground="#073169"
                           Margin="0 5 0 0"/>
                
                <ComboBox Style="{StaticResource ComboBoxAuthenticationStyle}" 
                          x:Name="RoleList"
                          BorderBrush="#107a2e"
                          HorizontalContentAlignment="Center"
                          ItemsSource="{Binding Roles, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding SelectedRole, UpdateSourceTrigger=PropertyChanged}">
                </ComboBox>

                <Button Style="{StaticResource ButtonAuthenticationStyle}"
                        Command="{Binding SwitchPageCommand}"
                        Content="Регистрация"
                        Foreground="#5c1b87"
                        Background="#abccff"
                        BorderBrush="Gray"
                        HorizontalContentAlignment="Center"/>
            </StackPanel>
        </Border>

    </Border>
</Page>
