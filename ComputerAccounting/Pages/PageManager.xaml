<Page x:Class="ComputerAccounting.PageManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerAccounting"
        xmlns:viewModel="clr-namespace:ComputerAccounting.ViewModels"
        xmlns:page="clr-namespace:ComputerAccounting.Pages"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800"
        Title="PageManager">

    <Page.Resources>
        <DataTemplate DataType="{x:Type viewModel:AuthorizationViewModel}">
            <page:AuthorizationPage/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:RegistrationViewModel}">
            <page:RegistrationPage/>
        </DataTemplate>
    </Page.Resources>
    
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Content="{Binding CurrentPage, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Page>
