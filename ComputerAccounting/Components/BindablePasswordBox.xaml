<UserControl x:Class="ComputerAccounting.Components.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerAccounting.Components"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800"
             VerticalAlignment="Center"
             HorizontalAlignment="Stretch"
             Margin="20 5">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="PasswordBoxDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <PasswordBox Style="{StaticResource PasswordBoxAuthenticationStyle}"
                 x:Name="PasswordField"
                 Tag="Пароль"
                 BorderBrush="#107a2e"
                 HorizontalContentAlignment="Center" 
                 PasswordChanged="PasswordField_PasswordChanged"/>
</UserControl>
